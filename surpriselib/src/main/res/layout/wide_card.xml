<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlWideCardParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background">
    <ImageView
            android:id="@+id/ivWide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
    />

    <RelativeLayout
            android:id="@+id/belowContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_title_background"
            android:layout_below="@id/ivWide">

        <TextView
                android:id="@+id/cta"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:background="@drawable/pic"
                android:paddingLeft="15dp"
                android:textSize="14dp"
                android:text="@string/explore"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                    android:id="@+id/adChoicesIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/cta"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"/>
        <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/suggestion_title"
                android:maxLines="2"
                android:textSize="14dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/adChoicesIcon"
                android:gravity="left"/>
    </RelativeLayout>
</RelativeLayout>