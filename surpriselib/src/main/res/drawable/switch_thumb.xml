            <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
            />
            <size android:width="95dp"/>
            <stroke
                    android:width="2dp"
                    android:color="@android:color/transparent"
            />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners
                    android:radius="20dp"
            />
            <solid android:color="@color/default_red"/>

            <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
            />
            <size android:width="95dp"/>
            <stroke
                    android:width="2dp"
